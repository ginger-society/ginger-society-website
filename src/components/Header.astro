---
const navLinks = [
  {
    label: "Projects",
    links: [
      { label: "Ginger DJ", href: "/products/ginger-dj" },
      { label: "Ginger Book", href: "/products/ginger-book" },
      { label: "Ginger UI", href: "/products/ginger-ui" },
      { label: "Ginger DB", href: "/products/ginger-db" },
      { label: "Ginger Scaffolder", href: "/products/ginger-scaffolder" },
      { label: "Ginger Releaser", href: "/products/ginger-releaser" },
      { label: "Ginger Connector", href: "/products/ginger-connector" },
    ],
  },
  { label: "Templates", href: "/templates/" },
  { label: "Manifesto", href: "/manifesto/" },
  { label: "Docs", href: "https://docs.gingersociety.org" },
  { label: "Internships", href: "/internships/" },
];
---

<script>
  if (typeof window !== "undefined") {
    const navbarToggle = document.querySelector(".navbar-toggle");
    
    // Toggle mobile menu on click
    navbarToggle?.addEventListener("click", function (this: HTMLDivElement) {
      const navLinks = document.querySelector("ul.nav-links");
      this.classList.toggle("active");
      if (navLinks) {
        navLinks.classList.toggle("open");
      }
    });

    // Expand "Projects" section on mobile
    const projectLink = document.querySelector(".projects-link");
    const projectsLinks = document.querySelector(".projects-links");

    if (projectLink && projectsLinks) {
      projectLink.addEventListener("click", function (e) {
        e.preventDefault();
        projectsLinks.classList.toggle("expanded");
      });
    }

    // Collapse submenu when clicking outside of it
    document.addEventListener("click", function ({target}) {
        if (!projectLink || !projectsLinks || !target)  {
            return;
        }
      const isClickInside = projectLink.contains(target as Node) || projectsLinks.contains(target as Node);
      if (!isClickInside && projectsLinks.classList.contains("expanded")) {
        projectsLinks.classList.remove("expanded");
      }
    });
  }
</script>

<style>
  /* Navbar container */
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    background-color: black;
    position: sticky;
    top: 0;
    z-index: 1;
  }

  /* Brand styling */
  .navbar-brand {
    display: flex;
    align-items: center;
    color: white;
    min-width: 220px;
  }

  .navbar-brand img {
    margin-right: 10px;
  }

  /* Hamburger menu */
  .navbar-toggle {
    display: block;
    background-color: #f85907;
    padding: 10px;
    cursor: pointer;
    border-radius: 5px;
  }

  .navbar-toggle.active {
    background-color: #f85907;
  }

  .navbar-toggle span {
    display: block;
    width: 25px;
    height: 2px;
    margin: 3.2px;
    background-color: white;
  }

  /* Mobile dropdown menu styling */
  ul.nav-links {
    list-style: none;
    display: none;
    flex-direction: column;
    gap: 20px;
    margin: 0;
    padding: 20px;
    background-color: black;
    position: absolute;
    top: 60px;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 10;
  }

  ul.nav-links.open {
    display: flex;
  }

  /* Expanded Projects section on mobile */
  ul.projects-links {
    display: none;
    padding-left: 0px;
    background-color: #3d3d3d; /* Slightly grey background */
    list-style: none;
    position: absolute;
    margin-top: 30px
  }

  ul.projects-links li{
    padding: 15px 20px 15px 20px;
  }
  ul.projects-links li:hover{
    background: black;
    cursor: pointer;
  }

  ul.projects-links.expanded {
    display: block;
  }

  @media (max-width: 768px) {

    ul.projects-links {
        position: relative;
    }

    ul.nav-links {
      height: fit-content;
    }


  }

  /* For desktop view */
  @media (min-width: 768px) {
    ul.nav-links {
      display: flex;
      flex-direction: row;
      position: static;
      background-color: transparent;
      height: auto;
    }

    .navbar-toggle {
      display: none;
    }
  }

  .nav-link {
    color: white;
    cursor: pointer;
  }

  /* Dropdown items */
  ul.dropdown-menu > li {
    padding: 10px;
  }

  .dropdown-item {
    color: white;
  }

  .btn {
    padding: 5px 10px;
    background-color: #f85907;
    color: white;
    border-radius: 5px;
    display: flex;
    align-items: center;
  }
  .buttons{
    display: flex;
    gap: 15px;
  }
  a{
    text-decoration: none;
  }
</style>

