---
export interface NavItem {
  id: string;
  label: string;
}

export interface Props {
  navItems: NavItem[];
}

const { navItems } = Astro.props;
---

<style>
  /* Main container styling */
  .long-text-wrapper {
    padding: 150px;
    padding-top: 70px;
    background-color: #1c1c1e; /* Dark background */
    color: #e5e5e5; /* Light text for readability */
    overflow: visible; /* Ensure there's no clipping for sticky elements */
  }

  /* Layout for content and navigation */
  .layout {
    display: flex;
    position: relative;
    min-height: 100vh; /* Ensure layout has enough height to scroll */
  }

  /* Content area styling */
  .content {
    width: 80%;
  }

  /* Navigation container styling */
  .navigation {
    width: 20%;
    position: -webkit-sticky;
    position: sticky;
    top: 70px; /* Set the top offset for the sticky effect */
    padding-left: 20px;
    height: fit-content; /* Ensure it adapts to the content's height */
  }

  /* Custom navigation styles */
  .long-text-nav {
    background-color: #2c2c2e;
    padding: 10px;
    border-radius: 8px;
  }

  .nav {
    display: flex;
    flex-direction: column; /* Stack navigation items vertically */
    padding-left: 0; /* Remove default padding */
    margin-bottom: 0;
    list-style: none; /* Remove bullet points */
  }

  .nav-pills .nav-link {
    border-radius: 0.25rem; /* Rounded corners */
  }

  /* Navigation link styling */
  .nav-link {
    color: #ffffff; /* White text color for nav links */
    transition: background-color 0.2s ease;
    padding: 10px 15px; /* Padding for better touch targets */
    display: block;
    text-decoration: none;
    border-radius: 0.25rem; /* Rounded corners like pills */
    margin-bottom: 5px; /* Spacing between pills */
  }

  .nav-link:hover {
    background-color: #007bff; /* Blue background on hover */
  }

  .nav-link.active {
    background-color: #007bff; /* Active state */
    color: white;
  }

  /* Responsive layout for smaller screens */
  @media (max-width: 768px) {
    .layout {
      flex-direction: column;
    }

    .content,
    .navigation {
      width: 100%;
    }

    .long-text-wrapper {
      padding: 15px;
    }
  }
</style>

<div class="long-text-wrapper">
  <div class="layout">
    <!-- Content slot for child content -->
    <div class="content">
      <slot />
    </div>

    <!-- Navigation section -->
    <div class="navigation">
      <nav class="navbar long-text-nav">
        <ul class="nav nav-pills">
          {
            navItems.map((item) => (
              <li>
                <a href={`#${item.id}`} class="nav-link">
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
    </div>
  </div>
</div>
