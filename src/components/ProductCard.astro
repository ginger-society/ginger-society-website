---
const { title, description, imgSrc, imgAlt, link, reversed } = Astro.props;
const backgroundColor = reversed ? "#13151a" : "black";
---

<style>
  .row {
    display: flex;
    align-items: center;
    margin: 0 auto;
    padding-left: 150px;
    padding-right: 150px;
    padding-top: 30px;
    padding-bottom: 30px;
    background-color: var(--background-color); /* Dynamic background */
  }

  .col-lg-6 {
    width: 100%;
    max-width: 50%;
  }

  .feature-item-content {
    margin-bottom: 2rem;
    padding-left: 0;
  }

  .feature-item-banner {
    text-align: center;
    margin-bottom: 2rem;
  }

  .card-image img {
    max-width: 60%;
    height: auto;
  }

  .Learn-more a {
    text-decoration: none;
    color: #f85907;
    display: inline-block;
    margin-top: 10px;
  }

  .Learn-more a:hover {
    text-decoration: underline;
  }

  /* Specific styles when reversed */
  .row.reversed {
    flex-direction: row-reverse;
  }
</style>

<div
  class={`row ${reversed ? "reversed" : ""}`}
  style={`background-color: ${backgroundColor}`}
>
  <div class="col-lg-6">
    <div class="feature-item-content">
      <h2>{title}</h2>
      <p>{description}</p>
      <div class="Learn-more">
        <a href={link}>Get started<i class="ph-arrow-right"></i></a>
      </div>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="feature-item-banner">
      <div class="card-image">
        <img src={imgSrc} alt={imgAlt} loading="lazy" />
      </div>
    </div>
  </div>
</div>
