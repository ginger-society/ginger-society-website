---
// Define the Props type
export type FeatureProps = {
  title: string;
  description: string;
  imgSrc: string;
  imgAlt: string;
  secondaryLinkLabel?: string; // Optional
  secondaryLink?: string;       // Optional
  primaryLinkLabel?: string;    // Optional
  primaryLink?: string;          // Optional
  reversed?: boolean;            // Optional
};

const {
  title,
  description,
  imgSrc,
  imgAlt,
  secondaryLinkLabel,
  secondaryLink,
  primaryLinkLabel,
  primaryLink,
  reversed,
} = Astro.props;
---

<style>
  /* Apply global theme colors */
  .row {
    display: flex;
    align-items: center;
    margin: 0 auto;
    padding: 30px 150px;
    background-color: var(--primary-bg-color); /* Use dynamic background */
    flex-wrap: wrap;
  }

  .row.reversed {
    background-color: var(
      --secondary-bg-color
    ); /* Use reversed background for reversed rows */
    flex-direction: row-reverse;
  }

  .col-lg-6 {
    width: 100%;
    max-width: 50%;
    flex: 1;
  }

  .feature-item-content {
    margin-bottom: 2rem;
    padding-left: 0;
  }

  .feature-item-banner {
    text-align: center;
    margin-bottom: 2rem;
  }

  .card-image img {
    max-width: 250px;
    height: auto;
  }

  .Learn-more a {
    text-decoration: none;
    color: #f85907;
    display: inline-block;
    margin-top: 10px;
  }

  .Learn-more a:hover {
    text-decoration: underline;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .row {
      padding: 20px;
      flex-direction: column;
      align-items: center;
    }

    .col-lg-6 {
      max-width: 100%;
    }

    .card-image img {
      max-width: 90%;
    }
  }
</style>

<div class={`row ${reversed ? "reversed" : ""}`}>
  <div class="col-lg-6">
    <div class="feature-item-content">
      <h2>{title}</h2>
      <p>{description}</p>
      <div class="Learn-more">
        {primaryLink && primaryLinkLabel && (
          <a href={primaryLink}>{primaryLinkLabel}<i class="ph-arrow-right"></i></a>
        )}
        {secondaryLink && secondaryLinkLabel && (
          <a href={secondaryLink} class="secondary-link">{secondaryLinkLabel}<i class="ph-arrow-right"></i></a>
        )}
      </div>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="feature-item-banner">
      <div class="card-image">
        <img src={imgSrc} alt={imgAlt} loading="lazy" />
      </div>
    </div>
  </div>
</div>
