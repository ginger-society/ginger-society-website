---
const { title, description, imgSrc, imgAlt, link, reversed } = Astro.props;
const backgroundColor = reversed ? "#13151a" : "black";
---

<style>
  .row {
    display: flex;
    align-items: center;
    margin: 0 auto;
    padding: 30px 150px; /* Apply uniform padding for top and bottom */
    background-color: var(--background-color); /* Dynamic background */
    flex-wrap: wrap; /* Allow wrapping for smaller screens */
  }

  .col-lg-6 {
    width: 100%;
    max-width: 50%;
    flex: 1; /* Allow flex items to grow equally */
  }

  .feature-item-content {
    margin-bottom: 2rem;
    padding-left: 0;
  }

  .feature-item-banner {
    text-align: center;
    margin-bottom: 2rem;
  }

  .card-image img {
    max-width: 100%; /* Make sure images are responsive */
    height: auto;
  }

  .Learn-more a {
    text-decoration: none;
    color: #f85907;
    display: inline-block;
    margin-top: 10px;
  }

  .Learn-more a:hover {
    text-decoration: underline;
  }

  /* Specific styles when reversed */
  .row.reversed {
    flex-direction: row-reverse;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .row {
      padding: 20px; /* Reduce padding for mobile */
      flex-direction: column; /* Stack elements vertically */
      align-items: center; /* Center align items */
    }

    .col-lg-6 {
      max-width: 100%; /* Full width on mobile */
    }

    .card-image img {
      max-width: 90%; /* Reduce image size for mobile */
    }
  }
</style>

<div
  class={`row ${reversed ? "reversed" : ""}`}
  style={`background-color: ${backgroundColor}`}
>
  <div class="col-lg-6">
    <div class="feature-item-content">
      <h2>{title}</h2>
      <p>{description}</p>
      <div class="Learn-more">
        <a href={link}>Get started<i class="ph-arrow-right"></i></a>
      </div>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="feature-item-banner">
      <div class="card-image">
        <img src={imgSrc} alt={imgAlt} loading="lazy" />
      </div>
    </div>
  </div>
</div>
