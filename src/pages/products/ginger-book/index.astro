---
import Layout from "../../../layouts/Layout.astro";
import Hero from "../../../components/Hero.astro";
import ProductCard from "../../../components/ProductCard.astro";

// Data for each product card (used for sections)
const productCards: any[] = [
  {
    title: "Faster than Flash!",
    description:
      "Built with vite so it starts instanly and refreshes instantly.",
    imgSrc: "/img/ginger-book-speed-comparision.png",
    imgAlt: "Message inbox",
    primaryLink: "",
    primaryLinkLabel: "",
    secondaryLink: "https://docs.gingersociety.org/docs/ginger-book",
    secondaryLinkLabel: "Know more",
    reversed: true,
  },
  {
    title: "Mock REST and GraphQL endpoints",
    description:
      "Still mocking data using constants ? Use real network layer mocking to simulate real API calls.",
    imgSrc: "/img/ginger-book-msw.png",
    imgAlt: "Message inbox",
    primaryLink: "",
    primaryLinkLabel: "",
    secondaryLink: "https://docs.gingersociety.org/docs/ginger-book",
    secondaryLinkLabel: "Know more",
    reversed: false,
  },
];
---

<Layout title="GingerBook">
  <!-- Hero Section -->
  <Hero
    title="GingerBook"
    description="Build and test UI components independently"
    primaryLinkLabel="Read docs"
    primaryLink="/products/ginger-book/docs"
    secondaryLink="/products/ginger-book/tech-docs"
    secondaryLinkLabel="Read tech docs"
    imgUrl="/img/ginger-book.png"
  />

  <!-- Product Sections (Features) -->
  {
    productCards.map((product) => (
      <ProductCard
        title={product.title}
        description={product.description}
        imgSrc={product.imgSrc}
        imgAlt={product.imgAlt}
        primaryLink={product.primaryLink}
        primaryLinkLabel={product.primaryLinkLabel}
        reversed={product.reversed}
      />
    ))
  }
</Layout>
