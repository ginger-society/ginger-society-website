---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import ProductCard from "../../components/ProductCard.astro";
import { Content as ConnectorMD } from "../../components/markdowns/connector.md";

// Data for each product card (used for sections)
const productCards: any[] = [];
---

<Layout title="GingerConnector">
  <!-- Hero Section -->
  <Hero
    title="GingerConnector"
    description="Manages service dependencies in Microservice / Full Stack projects"
    primaryLinkLabel="Get started"
    primaryLink="https://docs.gingersociety.org/docs/ginger-connector/"
    imgUrl="https://www.gingersociety.org/images/ginger-connector.png"
  />

  <!-- Product Sections (Features) -->
  {
    productCards.map((product) => (
      <ProductCard
        title={product.title}
        description={product.description}
        imgSrc={product.imgSrc}
        imgAlt={product.imgAlt}
        primaryLink={product.primaryLink}
        primaryLinkLabel={product.primaryLinkLabel}
        reversed={product.reversed}
      />
    ))
  }
  <div class="markdown-container"><ConnectorMD /></div>
</Layout>

<style>
  .markdown-container {
    padding: 50px;
    padding-left: 160px;
    padding-right: 160px;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .markdown-container {
      padding: 50px;
      padding-left: 15px;
      padding-right: 15px;
    }
  }
</style>
