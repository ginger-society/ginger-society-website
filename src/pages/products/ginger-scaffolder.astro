---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import ProductCard from "../../components/ProductCard.astro";
import { Content as ScaffolderMD } from "../../components/markdowns/scaffolder.md";

const productCards: any[] = [];
---

<Layout title="GingerScaffolder">
  <!-- Hero Section -->
  <Hero
    title="GingerScaffolder"
    description="Project scaffolding tool"
    primaryLinkLabel="Get started"
    primaryLink="https://docs.gingersociety.org/docs/ginger-scaffolder/"
    imgUrl="/img/ginger-scaffolder.png"
  />

  <div class="markdown-container"><ScaffolderMD /></div>

  <!-- Product Sections (Features) -->
  {
    productCards.map((product) => (
      <ProductCard
        title={product.title}
        description={product.description}
        imgSrc={product.imgSrc}
        imgAlt={product.imgAlt}
        primaryLink={product.primaryLink}
        primaryLinkLabel={product.primaryLinkLabel}
        reversed={product.reversed}
      />
    ))
  }
</Layout>

<style>
  .markdown-container {
    padding: 50px;
    padding-left: 160px;
    padding-right: 160px;
    font-size: 1rem;
  }
  @media (max-width: 768px) {
    .markdown-container {
      padding: 50px;
      padding-left: 15px;
      padding-right: 15px;
    }
  }
</style>
